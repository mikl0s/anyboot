#!/bin/sh
set -e

# Create the anyboot user
useradd -m -s /bin/bash -G sudo,adm,cdrom,floppy,audio,dip,video,plugdev,netdev anyboot

# Set a default password (e.g., "anyboot") - CHANGE THIS for any real deployment!
echo "anyboot:anyboot" | chpasswd

# Allow passwordless sudo for the anyboot user
echo "anyboot ALL=(ALL) NOPASSWD: ALL" > /etc/sudoers.d/anyboot-nopasswd
chmod 0440 /etc/sudoers.d/anyboot-nopasswd
